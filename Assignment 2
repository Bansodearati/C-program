#include <stdio.h>

int main()
{
    char ch;

    /* Input an alphabet from user */
    printf("Enter any alphabet: ");
    scanf("%c", &ch);

    /* Switch value of ch */
    switch(ch)
    {
        case 'a': 
            printf("a is Vowel");
            break;
        case 'e': 
            printf("e is Vowel");
            break;
        case 'i': 
            printf("i is Vowel");
            break;
        case 'o': 
            printf("o is Vowel");
            break;
        case 'u': 
            printf("u is Vowel");
            break;
        case 'A': 
            printf("A is Vowel");
            break;
        case 'E': 
            printf("E is Vowel");
            break;
        case 'I': 
            printf("I is Vowel");
            break;
        case 'O': 
            printf("O is Vowel");
            break;
        case 'U': 
            printf("U is Vowel");
            break;
        default: 
            printf("Consonant");
    }

    return 0;
}
